{% extends 'base.html.twig' %}

{% block html %}
  {% block head %}
    <title>{% block title %}AP-HP | Connexion{% endblock %}</title>
    {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
    {% endblock %}
  {% endblock %}

  {% block body %}
  <body>
    <section class="vh-100">
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-6 text-black">

            <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
              <form style="width: 23rem;" method="post" action="{{ path('app_login') }}">
                <h3 class="h1 fw-bold mb-3 pb-3" style="letter-spacing: 1px;">ACCÈS RÉSERVÉ</h3>

                {% if error %}
                  <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                  <div class="form-outline mb-4">
                    <label class="form-label" for="email">Adresse mail :</label>
                    <input type="email" id="email" name="email" class="form-control form-control-lg" />
                  </div>

                  <div class="form-outline mb-4">
                    <label class="form-label" for="password">Mot de passe :</label>
                    <input type="password" id="password" name="password" class="form-control form-control-lg" />
                  </div>

                  <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

                  <div class="pt-1 mb-4">
                    <button class="btn btn-info btn-lg btn-block button-connexion" type="submit">Connexion</button>
                  </div>

                  <p class="small mb-5 pb-lg-2"><a class="text-muted" href="#!">Mot de passe oublié ?</a></p>

                </form>
              </div>
            </div>

            <div class="col-sm-6 px-0 d-none d-sm-block">
              <img src="{{ asset('img/doctors.jpg') }}"
                alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
          </div>
        </div>
      </section>
    {% endblock %}
    </body>
{% endblock %}